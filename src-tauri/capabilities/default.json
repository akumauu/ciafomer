{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for ciallo",
  "windows": ["main", "mode-panel", "result-panel", "capture-overlay"],
  "permissions": [
    "core:default",
    "core:event:default",
    "core:window:default",
    "core:window:allow-show",
    "core:window:allow-hide",
    "core:window:allow-set-focus",
    "core:window:allow-center",
    "core:window:allow-close",
    "shell:allow-open"
  ]
}
